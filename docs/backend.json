
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's primary email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the application.",
          "enum": ["user", "admin"]
        },
        "mobileNumber": {
            "type": "string",
            "description": "The user's primary mobile number."
        },
        "altMobileNumber": {
            "type": "string",
            "description": "The user's alternative mobile number."
        },
        "schoolOrCollege": {
            "type": "string",
            "description": "The name of the user's school or college."
        },
        "address": {
            "type": "string",
            "description": "The user's physical address."
        },
        "altEmail": {
            "type": "string",
            "format": "email",
            "description": "The user's alternative email address."
        }
      },
      "required": ["uid", "email"]
    },
    "Category": {
      "title": "Event Category",
      "description": "Represents a category for an event.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the category."
        },
        "order": {
          "type": "number",
          "description": "The display order of the category."
        }
      },
      "required": ["name", "order"]
    },
    "Event": {
      "title": "Event",
      "description": "Represents an event created by a user.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "location": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "category": { "type": "string" },
        "institution": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "organizer": { "type": "string" },
        "organizerId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "description", "location", "date", "category", "institution", "imageUrl", "organizerId", "status"]
    },
    "Institution": {
      "title": "Institution",
      "description": "Represents a school, college, or other organization.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the institution."
        },
        "state": {
          "type": "string",
          "description": "The state where the institution is located."
        },
        "district": {
          "type": "string",
          "description": "The district where the institution is located."
        },
        "address": {
          "type": "string",
          "description": "The detailed address of the institution."
        },
        "imageUrls": {
          "type": "array",
          "items": { "type": "string", "format": "uri" },
          "description": "A list of URLs for images of the institution."
        },
        "mainImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the primary image to be displayed prominently."
        }
      },
      "required": ["name", "state", "district", "address", "imageUrls", "mainImageUrl"]
    },
    "AppSettings": {
      "title": "Application Settings",
      "description": "Stores global settings for the application.",
      "type": "object",
      "properties": {
        "colorTheme": {
          "type": "string",
          "description": "The active color theme for the application.",
          "enum": ["zinc", "red", "royal-blue", "light-blue", "royal-green"]
        },
        "defaultTheme": {
            "type": "string",
            "description": "The default appearance theme (light/dark/system) for new users.",
            "enum": ["light", "dark", "system"]
        }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for each user."
    },
    "/events/{eventId}": {
      "schema": { "$ref": "#/entities/Event" },
      "description": "Stores all event data."
    },
    "/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Stores the list of event categories."
    },
    "/institutions/{institutionId}": {
      "schema": { "$ref": "#/entities/Institution" },
      "description": "Stores the list of institutions."
    },
    "/settings/app-config": {
      "schema": { "$ref": "#/entities/AppSettings" },
      "description": "Stores global application settings like the current theme."
    }
  }
}
